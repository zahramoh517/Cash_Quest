<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/purple_background" /> <!-- Purple when pressed  -->
            <corners android:radius="25dp" />
            <stroke android:width="20dp" android:color="@color/white" /> <!-- Border -->
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape>
            <solid android:color="@color/light_purple" /> <!-- Light purple color -->
            <corners android:radius="25dp" />
            <stroke android:width="20dp" android:color="@color/white" /> <!-- Border -->
        </shape>
    </item>
</selector>