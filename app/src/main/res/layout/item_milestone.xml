<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/milestone_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/milestone_background"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Milestone Icon -->
    <ImageView
        android:id="@+id/milestone_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_novice_saver"/>

    <!-- Milestone Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/milestone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Title"
            android:textSize="24sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/jersey"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/milestone_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milestone Description"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
